@model MyApplication.ViewModels.Currencies.AddVM
@{
}

<h2> Add Currency</h2>

<form id="addCurrencyForm" action="/Currencies/Add" method="post">
    <div>
        <div class="grid">
            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Material)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Material)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Material)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Type)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Type)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Type)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Weight)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Weight)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Weight)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Price)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Price)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Price)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.IsItPure)
                </div>
                <div class="col-2">
                    @Html.CheckBoxFor(m => m.IsItPure)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.IsItPure)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.InStock)
                </div>
                <div class="col-2">
                    @Html.CheckBoxFor(m => m.InStock)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.InStock)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-3">
                    @Html.ValidationMessage("summaryError")
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Save" />
                    <a href="/Currencies/Index" class="right">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>